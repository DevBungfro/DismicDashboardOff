#sidebar.float-left
  a(href='/dashboard')
    .icon.round.shadow
  hr
  each guild in guilds
    a(href='/servers/' + guild.id)
      .icon.round.shadow.my-2(data-toggle='tooltip', data-placement='right', title=guild.name)
        if guild.icon
          img.round(alt=guild.name, src=`https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}?size=100000`)
        else
          p.text-center.abbr #{guild.nameAcronym}
  a(href='/invite')
    .icon
      p.abbr.text-success.text-center
        i.fas.fa-plus
  .hamburger.px-1
    i.fas.fa-bars