#sidebar.float-left
  a(href='/dashboard')
    .icon.round.shadow
  hr
  each guild in guilds
    a(href='/guild/' + guild.id)
      .icon.round.shadow.my-2(data-toggle='tooltip', data-placement='right', title=guild.name)
        if guild.icon
          img.round(alt=guild.name, src=`https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}?size=2048`)
        else
          img.round(alt=guild.name, src=`https://media.discordapp.net/attachments/877791990169870346/877792002698260500/dBymBmGq_400x400.jpg`)
  a(href='/invite')
    .icon
      p.abbr.text-success.text-center
        i.fas.fa-plus
  .hamburger.px-1
    i.fas.fa-bars